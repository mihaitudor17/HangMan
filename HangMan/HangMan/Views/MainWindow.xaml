<Window x:Class="HangMan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HangMan"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu DockPanel.Dock="Top" >
            <MenuItem Header="_File">
            <MenuItem Header="_New Game" />
            <MenuItem Header="_Open Game" />
            <MenuItem Header="_Save Game" />
            <Separator />
            <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem Header="Categories">
                <MenuItem Header="_All categories"/>
                <MenuItem Header="_Cars"/>
                <MenuItem Header="_Movies"/>
                <MenuItem Header="_Rivers"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>
        <TextBlock Name="text" VerticalAlignment="Center"></TextBlock>
        <Image Name="image"></Image>
    </Grid>
</Window>
